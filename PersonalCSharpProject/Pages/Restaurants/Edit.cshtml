@page "{restaurantId:int?}"
@model PersonalCSharpProject.Pages.Restaurants.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Welcome to the edit page!</h1>
<form method="POST">
    <div class="form-group">
        <label asp-for="Restaurant.Name"></label>
        <input asp-for="Restaurant.Name" class="form-control" /> @*we don't need to include type cause asp-for will detect the type*@
        <span class="text-danger" asp-validation-for="Restaurant.Name"></span>     
    </div>
    <div class="form-group">
        <label asp-for="Restaurant.Location"></label>
        <input asp-for="Restaurant.Location" class="form-control" /> @*we don't need to include type cause asp-for will detect the type*@
        <span class="text-danger" asp-validation-for="Restaurant.Location"></span>
    </div>
    <div class="form-group">
        <label asp-for="Restaurant.Cuisine"></label>
        <select asp-for="Restaurant.Cuisine" asp-items="Model.Cuisines" class="form-control">
        </select>
        <span class="text-danger" asp-validation-for="Restaurant.Cuisine"></span>
    </div>


    <input type="hidden" asp-for="Restaurant.Id" />
    <button type="submit" class="btn btn-primary">Update</button>
</form>