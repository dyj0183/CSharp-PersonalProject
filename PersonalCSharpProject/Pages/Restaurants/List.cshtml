@page
@model PersonalCSharpProject.Pages.Restaurants.IndexModel
@{
    ViewData["Title"] = "Restaurant";
}

<h1>Welcome to Sami's Restaurant</h1>
@*allow me to grab the data from the .cs file*@

@*built search funtionality*@
<form method="GET">
    <div class="form-group">
        <div class="input-group">
            @*asp-for is two way data binding, set up both value and name*@
            <input type="search" class="form-control" asp-for="SearchTerm" /> 
            <button class="btn btn-dark">Search</button>
        </div>
    </div>
</form>

<table class="table">
    @*I can just use "Model" cause at the top I said "@model ..."*@
    @foreach (var restaurant in Model.Restaurants)
    {
        <tr>
            <td>@restaurant.Name</td>
            <td>@restaurant.Location</td>
            <td>@restaurant.Cuisine</td>
            <td>
                <a class="btn btn-primary"
                   asp-page="./Detail"
                   asp-route-restaurantId="@restaurant.Id">
                    Detail
                </a>
                <a class="btn btn-success"
                   asp-page="./Edit"
                   asp-route-restaurantId="@restaurant.Id">
                    Edit
                </a>
            </td>
        </tr>
    }
</table>


<div>
    @Model.Message
</div>
